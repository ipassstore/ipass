<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= t("site.title") %>.<%= @title if @title %></title>
    <meta name="description" content="<%= defined?(@description) && @description.present? ? @description : t('site.description')  %>">
    <meta name="keywords" content="<%= defined?(@keywords) && @keywords.present? ? @keywords : t('site.keywords')  %>">
    <meta name="author" content="webmaster@<%= SETTINGS['ipassbook_domain'] %>">
    <meta content="initial-scale=1, minimum-scale=1, width=device-width" name="viewport">

    <%= stylesheet_link_tag "passbook_total", media: 'all' %>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;lang=en" rel="stylesheet">

    <%= csrf_meta_tags %>
    <!--[if lte IE 8]>
      <%= stylesheet_link_tag "style-ie" %>
    <![endif]-->

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <%= yield :header_scripts %>
  </head>

  <body class="<%= @body_class %>">
    <%#= render 'shared/loading' %>
    <div class='admin-container'>
      <%= yield %>
    </div>

    <%= render 'shared/passbook_javascripts' %>
  </body>
</html>

